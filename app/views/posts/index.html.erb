<h1>Whatever You Postit</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Name</th>
			<th>Time</th>
			<th>Conent</th>
			<th>Categories</th>
			<th>Comment</th>
			<th colspan="6"></th>
		</tr>
	</thead>


	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title%></td>
				<td><%= post.user.name%></td>
				<td><%= post.created_at%></td>
				<td><%= post.content%></td>
				<td><% post.categories.each do |category| %></td>
					<td><%= category.name%></td>
				<td><% end %></td>
				<td><% post.comments.each do |comment| %></td>
					<td><%= comment.user.name%></td>
					<td><%= comment.content%></td>
					<td><%= comment.created_at%></td>
				<td><% end %></td>
			</tr>
		<% end %>
	</tbody>

</table>

<br>